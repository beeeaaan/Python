def solution(order):
    answer = 0    
    belt = []
    index = 0
    
    for box in range(1, len(order) + 1):
        belt.append(box)  # 현재 상자 싣기
        
        # 컨테이너 벨트 위 상자 존재하고 현재 실어야 하는 상자의 순서일 경우
        while (belt) and (belt[-1] == order[index]):
            answer += 1  # 상자 트럭 실은 개수 증가
            index += 1  # 다음 상자 이동
            belt.pop()  # 꺼낸 상자 제거
            
    return answer
