def solution(number, limit, power):
    # 각 숫자의 약수의 개수를 계산하는 함수
    def divisor_count(n):
        cnt = 0
        
        for i in range(1, int(n**0.5) + 1):
            if n % i == 0:
                # 제곱근 정수인 경우
                if i == (n // i):
                    cnt += 1
                # 제곱근 정수 아닌 경우
                else:
                    cnt += 2                    
        return cnt

    total_Iron = 0
    
    for i in range(1, number + 1):
        weapon_Power = divisor_count(i)
        # 제한수치 초과하지 않는 경우
        if weapon_Power > limit:
            total_Iron += power
        # 제한수치 초과하는 경우우
        else:
            total_Iron += weapon_Power            
    return total_Iron
