import math

def solution(n, stations, w):
    answer = 0
    dist = []  # 전파가 안 닿는 구간 길이
    
    # 기지국 사이 빈 구간
    for i in range(1, len(stations)):
        dist.append((stations[i]-w-1) - (stations[i-1]+w))
    
    # 맨 앞, 맨 뒤 구간
    dist.append(stations[0]-w-1)
    dist.append(n-(stations[-1]+w))
    
    # 각 구간마다 필요한 기지국 수 추가
    for length in dist:
        if length > 0:
            answer += math.ceil(length/(2*w+1))
            
    return answer
