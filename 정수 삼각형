def solution(triangle):
    dp = triangle     
    depth = len(dp)
    
    for i in range(1, depth):
        for j in range(i+1):
            # 왼쪽 끝인 경우
            if (j == 0):
                dp[i][j] += dp[i-1][j]
            # 오른쪽 끝인 경우
            elif (j == i):
                dp[i][j] += dp[i-1][j-1]
            # 가운데인 경우
            else:
                dp[i][j] += max(dp[i-1][j], dp[i-1][j-1])
                
    return max(dp[depth-1])
