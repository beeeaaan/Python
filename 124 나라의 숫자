def solution(n):
    answer = []
    
    while (n) :
        temp = n % 3
        
        # 3으로 나누어 떨어질 경우 4로 변경
        if (temp == 0) :
            temp = 4
            n -= 1
        answer.append(str(temp))
        n //= 3    
        
    # 역순 결과 뒤집기기
    answer.reverse()
    
    return ''.join(answer)
