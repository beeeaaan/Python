def solution(a, b):
    answer = 0
    
    # a, b 모두 홀수일 경우 a 제곱 + b 제곱
    if a % 2 != 0 and b % 2 != 0:
        answer = a**2 + b**2
    # a, b 중 하나만 홀수일 경우 2 * (a + b)
    elif a % 2 != 0 or b % 2 != 0: 
        answer = 2 * (a + b)
    # a, b 모두 홀수일 경우 |a - b|
    else:
        answer = abs(a-b)
        
    return answer
