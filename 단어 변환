from collections import deque

# 두 단어간 글자 수 차이 계산 함수
def dif(a, b):
    dif = 0
    
    for i in range(len(a)):
        if a[i] != b[i]:
            dif += 1
            
    return dif

def solution(begin, target, words):
    # BFS 큐(현재 단어, 변환 횟수)
    dq = deque([[begin, 0]])    
    # 각 단어 방문 여부 확인
    visit = [False] * len(words)

    while dq:
        word, dist = dq.popleft()
        
        # 현재 단어가 목표 단어일 경우 변환 횟수 반환
        if word == target:
            return dist
        
        for i in range(len(words)):
            # 한 글자만 다르고 아직 방문하지 않은 경우 다음 단어 거리 증가 및 방문 처리
            if dif(word, words[i]) == 1 and not visit[i]:
                # 다음 단어 거리 증가 및 방문 처리
                dq.append([words[i], dist + 1])
                visit[i] = True
        
    # target 변환할 불가능한 경우
    return 0
