def solution(board, h, w):
    answer = 0
    xh = [0, 1, -1, 0]
    xw = [1, 0, 0, -1]
    
    # 이웃하는 칸들 중 같은 색으로 칠해져 있는 칸의 개수 확인
    for i in range(4):
        if h + xh[i] >= 0 and h + xh[i] < len(board) and w + xw[i] >= 0 and w + xw[i] < len(board):
            if board[h][w] == board[h + xh[i]][w + xw[i]]:
                answer+=1
                
    return answer
